<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAlarmActivity"
    android:background="@color/primary"
    android:paddingHorizontal="20dp"
    android:paddingVertical="23dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_alignParentStart="true"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:text="@string/add_task" />

<!--        <androidx.appcompat.widget.AppCompatButton-->
<!--            android:layout_width="48dp"-->
<!--            android:layout_height="48dp"-->
<!--            android:background="@drawable/back_btn"-->
<!--            android:layout_alignParentEnd="true"-->
<!--            android:text="<"-->
<!--            android:textColor="#fff" />-->

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="102dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/timeTv"
            android:text="Выбериет время"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:textSize="18sp"
            android:layout_alignParentStart="true"
            android:background="@drawable/input_bg"
            android:layout_width="158dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/dateTv"
            android:text="Выбериет дату"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:textSize="18sp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/input_bg"
            android:layout_width="158dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="153dp"
        android:rowCount="6"
        android:columnCount="1">

        <TextView
            android:text="Повторять каждый"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox android:id="@+id/checkbox_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:buttonTint="@color/orange"
            android:backgroundTint="@color/white"
            android:text="Понедельик" />

        <CheckBox android:id="@+id/checkbox_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:buttonTint="@color/orange"
            android:text="Вторник"/>

        <CheckBox android:id="@+id/checkbox_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:buttonTint="@color/orange"
            android:text="Среда"/>

        <CheckBox android:id="@+id/checkbox_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:buttonTint="@color/orange"
            android:text="Четверг"/>

        <CheckBox android:id="@+id/checkbox_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:buttonTint="@color/orange"
            android:text="Пятница"/>

        <CheckBox android:id="@+id/checkbox_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:buttonTint="@color/orange"
            android:text="Суббота"/>


        <CheckBox android:id="@+id/checkbox_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:buttonTint="@color/orange"
            android:text="Воскресенье"/>

    </GridLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="26dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/create_alarm"
        android:text="@string/create_alarm_button"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@drawable/primary_btn" />

</RelativeLayout>